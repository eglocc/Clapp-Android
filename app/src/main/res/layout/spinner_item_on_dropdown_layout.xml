<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="@dimen/default_horizontal_margin"
        android:paddingLeft="@dimen/default_horizontal_margin">

        <ImageView
            android:id="@+id/symbol"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/event_type_conference" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/default_horizontal_margin"
            android:paddingStart="@dimen/default_horizontal_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_sub_head_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/symbol"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Conference" />

    </android.support.constraint.ConstraintLayout>
</layout>